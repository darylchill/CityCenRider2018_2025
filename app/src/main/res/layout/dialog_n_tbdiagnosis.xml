<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="TB DIAGNOSIS AND TREATMENT"
        android:textAlignment="center">

    </TextView>

    <RadioGroup
        android:id="@+id/rdGroup_dialog_N_TB"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RadioButton
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:hint="3"
            android:text="Not yet diagnosed; not undergoing treatment"
            android:textSize="@dimen/textSize" />

        <RadioButton
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="4"
            android:text="Diagnosed to have TB; not undergoing any treatment"
            android:textSize="@dimen/textSize" />

        <RadioButton
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="5"
            android:text="Diagnosed to have TB; treatment is on-going"
            android:textSize="@dimen/textSize" />

        <RadioButton
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="99"
            android:text="Don't know"
            android:textSize="@dimen/textSize" />


    </RadioGroup>


</LinearLayout>
